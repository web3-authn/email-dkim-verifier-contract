# Recovery email recipient (public; used to generate mailto:)
RECOVER_EMAIL_RECIPIENT=recover@web3authn.org

# Relayer configuration (required)
VITE_RELAYER_URL=https://relay.tatchi.xyz
VITE_RELAYER_ACCOUNT_ID=w3a-relayer.testnet

# NEAR configuration
VITE_NEAR_NETWORK=testnet
VITE_NEAR_RPC_URL=https://test.rpc.fastnear.com
VITE_NEAR_EXPLORER=https://testnet.nearblocks.io

# Wallet iframe configuration (recommended)
VITE_WALLET_ORIGIN=https://wallet.web3authn.org
# Optional: override iframe wallet paths (leave unset to use SDK defaults)
# VITE_WALLET_SERVICE_PATH=/wallet-service
# VITE_SDK_BASE_PATH=/sdk
# Credential scope override (must be a parent domain of VITE_WALLET_ORIGIN)
VITE_RP_ID_BASE=web3authn.org
VITE_WEBAUTHN_CONTRACT_ID=w3a-v1.testnet

# Optional contract overrides (SDK has sensible defaults for testnet)
# VITE_EXAMPLE_ACCOUNT_ID=
# VITE_EMAIL_RECOVERER_CONTRACT_ID=w3a-email-recoverer-v1.testnet
# VITE_DKIM_VERIFIER_CONTRACT_ID=email-dkim-verifier-v1.testnet
